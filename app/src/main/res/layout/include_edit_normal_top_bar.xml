<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_top_bar_edit_note"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_main_dark"
    android:orientation="horizontal"
    android:padding="8.0dip">

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="@drawable/border_edit_text_titlte"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_title_note"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:hint="Tiêu đề"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:minHeight="29.0dip"
            android:paddingBottom="5.0dip"
            android:paddingLeft="3.0dip"
            android:paddingTop="5.0dip"
            android:textSize="@dimen/text_size_title">

            <requestFocus />
        </EditText>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_view_change_color"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/icon_change_color" />

    <ImageView
        android:id="@+id/image_view_save"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/icon_save" />

    <ImageView
        android:id="@+id/image_view_edit_tool"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon_three_dot"
        android:tint="#000" />

</LinearLayout>