<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_top_bar_view_note"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_main_dark"
    android:orientation="horizontal"
    android:padding="8.0dip">

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="#000"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/text_view_title_note"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:focusable="false"
            android:inputType="text"
            android:maxLines="1"
            android:minHeight="29.0dip"
            android:paddingBottom="5.0dip"
            android:paddingLeft="3.0dip"
            android:paddingTop="5.0dip"
            android:textColor="#000"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_view_edit_note"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/icon_edit"
        android:tint="#000" />

    <ImageView
        android:id="@+id/iamge_view_tool"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon_three_dot"
        android:tint="#000" />

</LinearLayout>