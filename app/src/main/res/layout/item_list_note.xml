<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <View
        android:id="@+id/header_color"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:background="@color/color_main_dark" />

    <RelativeLayout
        android:id="@+id/parent_layout_item_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/header_color"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLength="30"
            android:maxLines="1"

            android:paddingLeft="5dp"

            android:text="fddasdsadfsafdsafdsafdsfdsffffffffsdafdsfsafsdafdsfdsadsadsadsafsfdsaffffsafs"
            android:textColor="#ff000000"
            android:textSize="@dimen/text_size_big_title" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/text_view_title"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_view_type_checklist"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_check"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_view_time_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="31 Dec 12:30 PM"
                android:textColor="#ff000000"
                android:textSize="@dimen/text_size_big_title" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>