<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout_widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_main">

        <TextView
            android:id="@+id/text_view_widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/appwidget_text"
            android:text="@string/appwidget_text"
            android:textColor="#ff000000"
            android:textSize="@dimen/text_size_big_title"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_widget_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_layout_widget_title"
        android:background="@color/color_main_dark">

        <TextView
            android:id="@+id/text_view_widget_content"
            android:layout_width="match_parent"
            android:textColor="#ff000000"
            android:layout_height="match_parent"
            android:paddingLeft="5dp" />
    </LinearLayout>

</RelativeLayout>