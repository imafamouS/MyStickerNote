<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">#FAFAFA</item>
        <item name="popupMenuStyle">@style/popupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/popupMenuStyle</item>
    </style>

    <style name="popupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#FAFAFA</item>
    </style>
    <style name="bottom_bar" parent="@style/view_match_width">
        <item name="android:gravity">left</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/color_main_dark</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="view_match_width" parent="@style/view_wrap">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="view_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WrapEverythingDialog">
        <item name="windowMinWidthMajor">0dp</item>
        <item name="windowMinWidthMinor">0dp</item>
    </style>

    <style name="Theme.MyDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
